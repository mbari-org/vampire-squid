# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{scala,sbt,sc}]
indent_style = space
indent_size = 4
max_line_length = 100
insert_final_newline = true